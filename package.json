{
  "name": "express-secure-auth",
  "version": "1.0.0",
  "description": "Solution for broken authentication, made for Express.js",
  "main": "dist/index.js",
  "repository": "git@github.com:lauslim12/express-secure-auth.git",
  "author": "Nicholas",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "integration-test": "nyc --check-coverage --lines 70 --reporter=text mocha -r ts-node/register ./test/**/*.spec.ts",
    "start": "NODE_ENV=production node dist",
    "dev": "ts-node-dev src",
    "circular-check": "dpdm --tree --circular --warning ./**/*.ts",
    "format-check": "prettier --check ./**/*.ts",
    "eslint-check": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "lint": "yarn format-check && yarn eslint-check && yarn type-check"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-rate-limit": "^5.5.1",
    "handy-redis": "^2.3.1",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.30",
    "rate-limit-redis": "^2.1.0",
    "redis": "^3.1.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.2.22",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.9",
    "@types/rate-limit-redis": "^1.7.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.4",
    "dpdm": "^3.8.0",
    "eslint": "^8.2.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.2"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:security/recommended"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  },
  "engines": {
    "node": "16"
  }
}
